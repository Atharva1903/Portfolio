	}
</style>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";

	gsap.registerPlugin(ScrollTrigger);

	function initAboutMeAnimations() {
		const aboutMeImage = document.querySelector(".about-me-image");
		const aboutMeCard = document.querySelector(".about-me-card");
		if (aboutMeImage && aboutMeCard) {
			gsap.from(aboutMeImage, {
				scrollTrigger: {
					trigger: aboutMeImage,
					start: "top bottom",
					end: "center center",
					scrub: 1,
					markers: false,
				},
				ease: "power3.out",
				"--clip": "30%",
			});

			gsap.from(aboutMeCard, {
				scrollTrigger: {
					trigger: aboutMeCard,
					start: "top bottom",
					end: "center center",
					scrub: 0.7,
					markers: false,
				},
				ease: "power3.out",
				scale: 0.8,
				opacity: 0,
			});
		}

		const isMobile = window.matchMedia('(max-width: 1024px)').matches;
		let colorStart = "center center";
		if (isMobile) {
			const section = document.getElementById('about-me-section');
			if (section) {
				const rect = section.getBoundingClientRect();
				const scrollY = window.scrollY || window.pageYOffset;
				const offset = rect.top + scrollY + rect.height * 0.7;
				colorStart = `+=${offset - window.innerHeight} top`;
			}
		}

		gsap.to(".home-dark-section", {
			scrollTrigger: {
				trigger: "#about-me-section",
				start: colorStart,
				end: "bottom top",
				scrub: 0.5,
				markers: false,
				immediateRender: false,
			},
			ease: "none",
			backgroundColor: "#18181b",
			color: "#fff",
		});
		gsap.to("#about-me-section h2, #about-me-section p, #about-me-section h3", {
			scrollTrigger: {
				trigger: "#about-me-section",
				start: colorStart,
				end: "bottom top",
				scrub: 0.01,
				markers: false,
				immediateRender: false,
			},
			ease: "none",
			color: "#fff",
		});
	}
	document.removeEventListener("DOMContentLoaded", initAboutMeAnimations);
	document.addEventListener("DOMContentLoaded", initAboutMeAnimations);
</script> 